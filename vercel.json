{
  "version": 2,
  "builds": [
    {
      "src": "dennisivy/wsgi.py",
      "use": "@vercel/python",
      "config": { 
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    },
    {
      "src": "build.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles/$1"
    },
    {
      "src": "/media/(.*)",
      "dest": "/media/$1"
    },
    {
      "src": "/(.*)",
      "dest": "dennisivy/wsgi.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "dennisivy.settings",
    "PYTHONPATH": "$PYTHONPATH:.",
    "DEBUG": "False"
  },
  "installCommand": "pip install -r requirements.txt",
  "buildCommand": "python manage.py collectstatic --noinput"
}