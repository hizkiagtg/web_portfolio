# Django Configuration
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=.vercel.app,localhost,127.0.0.1

# Database Configuration
# For local development, use SQLite (default)
# For production, you can use PostgreSQL with connection string
DATABASE_URL=sqlite:///db.sqlite3

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://your-domain.vercel.app,http://localhost:3000

# Email Configuration (Optional)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# AWS S3 Configuration (Optional - for file storage)
USE_S3=False
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=us-east-1

# Security & Features
RATELIMIT_ENABLE=False

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379/1

# Monitoring (Optional)
SENTRY_DSN=

# Machine Learning Model Paths (if using custom paths)
# These are optional as the models are included in the repository
FEATURE_EXTRACTION_MODEL_PATH=feature_extraction.pickle
SVC_MODEL_PATH=best_svc.pickle
X_TRAIN_PATH=X_train.pickle